@page "/"
@namespace Notes.Pages
@using Notes.Models.Contex

@inject NoteDbContext DbContext

<TableOfNotes notes="_notes" />
<NewNote/>

@code{
    private List<NoteItem> _notes { get; set; }

    protected async override Task OnInitializedAsync()
    {
        _notes = DbContext.NoteDbSet.Select(itemDb=>new NoteItem(itemDb)).ToList();
    }
}
